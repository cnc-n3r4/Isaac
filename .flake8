[flake8]
max-line-length = 127
max-complexity = 10
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F821,  # undefined name (handled by mypy)
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    .tox,
    .eggs,
    *.egg,
    .venv,
    venv,
    .env,
    ENV,
    env,
per-file-ignores =
    __init__.py:F401  # imported but unused
    tests/*:S101  # assert used in tests
    tests/*:S104  # possible binding to all interfaces

[tool:pytest]
addopts =
    --strict-markers
    --strict-config
    --cov=isaac
    --cov-report=term-missing
    --cov-report=xml
    --cov-fail-under=85
testpaths = tests
python_files = test_*.py
python_classes = Test*
python_functions = test_*